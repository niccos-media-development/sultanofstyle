{% schema %}
{
  "name": "Responsive Multicolumn",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Your Section Heading Here"
    },
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "column_svg",
          "label": "SVG Image"
        },
        {
          "type": "text",
          "id": "column_heading",
          "label": "Column Heading",
          "default": "Column Heading"
        },
        {
          "type": "textarea",
          "id": "column_text",
          "label": "Column Text",
          "default": "Column text content goes here."
        },
        {
          "type": "color",
          "id": "column_background_color",
          "label": "Column Background Color",
          "default": "#f9f9f9"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Responsive Multicolumn",
      "category": "Custom",
      "settings": {},
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}

<div style="background-color: {{ section.settings.section_background_color }}" class="page-width">
<section class="responsive-multicolumn">
  <h1 class="section-heading">{{ section.settings.section_heading }}</h1>
  <div class="columns">
    {% for block in section.blocks %}
      <div class="column" style="background-color: {{ block.settings.column_background_color }}">
        {% if block.settings.column_svg %}
          <img src="{{ block.settings.column_svg | img_url: 'master' }}" alt="SVG Icon" class="column-svg">
        {% endif %}
        <h2 class="column-heading">{{ block.settings.column_heading }}</h2>
        <p class="column-text">{{ block.settings.column_text }}</p>
      </div>
    {% endfor %}
  </div>
</section>
</div>

<style>
  /* Section Heading */
  .responsive-multicolumn .section-heading {
    color: #000;
    text-align: center;
    font-family: "Cormorant Garamond", serif;
    font-size: 44px;
    font-weight: 500;
    line-height: 120%;
    letter-spacing: -0.66px;
    padding-top:70px;
  }

  /* Columns Container */
  .responsive-multicolumn .columns {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    padding: 3.2rem;
  }

  /* Individual Column */
  .responsive-multicolumn .column {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex: 1 1 calc(33.333% - 20px);
    max-width: calc(33.333% - 20px);
    padding: 20px;
    box-sizing: border-box;
  }

  /* SVG in Column */
  .responsive-multicolumn .column-svg {
    width: 72px;
    height: 72px;
    flex-shrink: 0;
    margin-bottom: 16px;
  }

  .responsive-multicolumn {
    max-width: 1500px;
    margin: auto;
  }

  /* Column Heading */
  .responsive-multicolumn .column-heading {
    color: #000;
    font-family: "Cormorant Garamond", serif;
    font-size: 26px;
    font-weight: 500;
    line-height: 130%;
    letter-spacing: -0.26px;
    margin-bottom: 8px;
  }

  /* Column Text */
  .responsive-multicolumn .column-text {
    color: var(--Paragraph-Color, #929292);
    font-family: "Lato", sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 160%;
  }

  /* Responsive Adjustments */
  @media (max-width: 767px) {
    .responsive-multicolumn .section-heading {
      font-size: 28px;
      line-height: 130%;
      letter-spacing: -0.28px;
    }

    .responsive-multicolumn .column {
      align-items:flex-start;
    }

    .responsive-multicolumn .columns {
    padding: 30px 20px;
  }

    .responsive-multicolumn .section-heading {
    padding-top:50px;
  }

    .responsive-multicolumn .column {
      flex: 1 1 100%;
      max-width: 100%;
      height: 197px;
      text-align: left;
    }

    .responsive-multicolumn .column-svg {
      width: 44px;
      height: 44px;
    }

    .responsive-multicolumn .column-heading {
      font-size: 22px;
      line-height: 130%;
      letter-spacing: -0.22px;
    }

    .responsive-multicolumn .column-text {
      font-size: 14px;
      line-height: 160%;
      text-align: left;
    }
  }
</style>
